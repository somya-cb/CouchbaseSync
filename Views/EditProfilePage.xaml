<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSync.Views.EditProfilePage"
             Title="Edit Profile">
    
    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            
            <!-- Profile ID (Read-only) -->
            <StackLayout>
                <Label Text="Employee ID:" FontAttributes="Bold" />
                <Entry x:Name="IdEntry" Text="{Binding Profile.Id}" IsReadOnly="True" BackgroundColor="LightGray" />
            </StackLayout>
            
            <!-- Name -->
            <StackLayout>
                <Label Text="Name:" FontAttributes="Bold" />
                <Entry x:Name="NameEntry" Text="{Binding Profile.Name}" Placeholder="Enter full name" />
            </StackLayout>
            
            <!-- Title -->
            <StackLayout>
                <Label Text="Job Title:" FontAttributes="Bold" />
                <Entry x:Name="TitleEntry" Text="{Binding Profile.Title}" Placeholder="Enter job title" />
            </StackLayout>
            
            <!-- Email -->
            <StackLayout>
                <Label Text="Email:" FontAttributes="Bold" />
                <Entry x:Name="EmailEntry" Text="{Binding Profile.Email}" Placeholder="Enter email address" Keyboard="Email" />
            </StackLayout>
            
            <!-- Buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,30,0,0">
                <Button Text="Save Changes" 
                        BackgroundColor="Green" 
                        TextColor="White" 
                        WidthRequest="120"
                        Clicked="OnSaveClicked" />
                
                <Button Text="Cancel" 
                        BackgroundColor="Gray" 
                        TextColor="White" 
                        WidthRequest="120"
                        Clicked="OnCancelClicked" />
            </StackLayout>
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>