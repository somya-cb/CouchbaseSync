<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AppSync.Views"
             x:Class="AppSync.Views.ProfilePage"
             Title="Employee Profiles"
             BackgroundColor="#F5F5F5">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" 
                     Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="#2E86AB" 
               CornerRadius="0" 
               HasShadow="True" 
               Padding="20,15">
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="FillAndExpand">
                <StackLayout HorizontalOptions="StartAndExpand">
                    <Label Text="Employee Directory" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="White" />
                    <Label x:Name="CountLabel" 
                           Text="Loading..." 
                           FontSize="14" 
                           TextColor="#B8E6FF" />
                </StackLayout>
                <Frame BackgroundColor="White" 
                       CornerRadius="20" 
                       Padding="10,5" 
                       HasShadow="False">
                    <Label Text="ðŸ”„" 
                           FontSize="16" 
                           VerticalOptions="Center" />
                </Frame>
            </StackLayout>
        </Frame>

        <!-- Employee Cards -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Profiles}"
                        Margin="10">
            
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" 
                                   ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White" 
                           CornerRadius="12" 
                           HasShadow="True" 
                           Padding="0" 
                           Margin="5,0">
                        
                        <Grid Padding="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Profile Avatar -->
                            <Frame Grid.Row="0" 
                                   Grid.Column="0" 
                                   Grid.RowSpan="2"
                                   BackgroundColor="#E3F2FD" 
                                   CornerRadius="30" 
                                   WidthRequest="50" 
                                   HeightRequest="50" 
                                   Padding="0" 
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Label Text="{Binding Name, Converter={StaticResource InitialsConverter}}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#1976D2" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>

                            <!-- Employee ID Badge -->
                            <Frame Grid.Row="0" 
                                   Grid.Column="2" 
                                   BackgroundColor="#E8F5E8" 
                                   CornerRadius="12" 
                                   Padding="8,4" 
                                   HasShadow="False">
                                <Label Text="{Binding Id}" 
                                       FontSize="12" 
                                       FontAttributes="Bold" 
                                       TextColor="#2E7D32" />
                            </Frame>

                            <!-- Name -->
                            <Label Grid.Row="0" 
                                   Grid.Column="1" 
                                   Text="{Binding Name}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="#333" 
                                   VerticalOptions="Center" />

                            <!-- Job Title -->
                            <Label Grid.Row="1" 
                                   Grid.Column="1" 
                                   Text="{Binding Title}" 
                                   FontSize="14" 
                                   TextColor="#666" 
                                   VerticalOptions="Center" />

                            <!-- Email -->
                            <StackLayout Grid.Row="2" 
                                        Grid.Column="0" 
                                        Grid.ColumnSpan="3" 
                                        Orientation="Horizontal" 
                                        Margin="0,10,0,0">
                                <Label Text="ðŸ“§" 
                                       FontSize="14" 
                                       VerticalOptions="Center" />
                                <Label Text="{Binding Email}" 
                                       FontSize="14" 
                                       TextColor="#2E86AB" 
                                       VerticalOptions="Center" />
                            </StackLayout>

                            <!-- Action Buttons -->
                            <StackLayout Grid.Row="3" 
                                        Grid.Column="0" 
                                        Grid.ColumnSpan="3" 
                                        Orientation="Horizontal" 
                                        HorizontalOptions="End" 
                                        Spacing="10" 
                                        Margin="0,15,0,0">
                                
                                <Button Text="âœï¸ Edit" 
                                        BackgroundColor="#FFF3E0" 
                                        TextColor="#F57C00" 
                                        FontSize="12" 
                                        CornerRadius="15" 
                                        Padding="15,8" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type views:ProfilePage}}, Path=BindingContext.EditCommand}" 
                                        CommandParameter="{Binding}" />
                                
                                <Button Text="ðŸ—‘ï¸ Delete" 
                                        BackgroundColor="#FFEBEE" 
                                        TextColor="#D32F2F" 
                                        FontSize="12" 
                                        CornerRadius="15" 
                                        Padding="15,8" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type views:ProfilePage}}, Path=BindingContext.DeleteCommand}" 
                                        CommandParameter="{Binding}" />
                            </StackLayout>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>